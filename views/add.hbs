<form action="/add" method="POST">
    <div class="input-field">
        <input id='title' type="text" class="validate" required>
        <label for="title">Name Course</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id='price' type="text" class="validate" required>
        <label for="price">Price Cours</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id='img' type="text" class="validate" required>
        <label for="img">Url Img </label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <button class="btn btn-primary">ADD Course</button>
</form>